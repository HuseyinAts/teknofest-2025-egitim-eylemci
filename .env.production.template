# ==========================================
# TEKNOFEST 2025 - PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# SECURITY WARNING: Never commit this file with real values to version control!
# Use strong, unique values for all secrets in production

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=teknofest-2025-egitim-eylemci
APP_ENV=production  # development, staging, production
APP_VERSION=3.0.0
APP_DEBUG=false  # MUST be false in production!

# ==========================================
# CRITICAL SECURITY SETTINGS - REQUIRED!
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_TO_64_CHAR_RANDOM_STRING_NEVER_SHARE_OR_COMMIT
JWT_SECRET_KEY=CHANGE_THIS_TO_DIFFERENT_64_CHAR_RANDOM_STRING_NEVER_SHARE

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Security
SECURITY_BCRYPT_ROUNDS=12
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_PASSWORD_REQUIRE_SPECIAL=true
SECURITY_SESSION_LIFETIME_HOURS=24
SECURITY_MAX_LOGIN_ATTEMPTS=5
SECURITY_LOCKOUT_DURATION_MINUTES=15

# ==========================================
# API SERVER SETTINGS
# ==========================================
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=4  # Adjust based on CPU cores
API_RELOAD=false  # MUST be false in production

# ==========================================
# CORS SETTINGS
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# ==========================================
# DATABASE SETTINGS
# ==========================================
DATABASE_URL=postgresql://username:password@localhost:5432/teknofest_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=10
DATABASE_POOL_RECYCLE=1800
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false  # MUST be false in production

# ==========================================
# REDIS CACHE SETTINGS
# ==========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_MAX_CONNECTIONS=10

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true  # MUST be true in production
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds (1 hour)

# ==========================================
# AI MODEL SETTINGS
# ==========================================
HUGGING_FACE_HUB_TOKEN=hf_your_token_here
MODEL_NAME=Huseyin/teknofest-2025-turkish-edu-v2
MODEL_DEVICE=cuda  # cuda, cpu, or mps
MODEL_MAX_LENGTH=2048
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_TOP_K=50
MODEL_CACHE_DIR=./model_cache
MODEL_LOAD_IN_8BIT=false
MODEL_USE_CACHE=true

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# ==========================================
# EMAIL SETTINGS (Optional)
# ==========================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_USE_TLS=true

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_REGISTRATION_ENABLED=true
FEATURE_AI_CHAT=true
FEATURE_ANALYTICS=true
FEATURE_MAINTENANCE_MODE=false

# ==========================================
# MCP INTEGRATION
# ==========================================
MCP_ENABLED=true
MCP_SERVER_URL=https://mcp.yourdomain.com
MCP_API_KEY=your_mcp_api_key_here

# ==========================================
# SECURITY HEADERS (Additional)
# ==========================================
# These are set in code but can be overridden
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true
SECURITY_FRAME_OPTIONS=DENY
SECURITY_XSS_PROTECTION=true
SECURITY_CONTENT_TYPE_OPTIONS=nosniff

# ==========================================
# SSL/TLS SETTINGS
# ==========================================
SSL_ENABLED=true
SSL_CERT_FILE=/path/to/cert.pem
SSL_KEY_FILE=/path/to/key.pem

# ==========================================
# BACKUP SETTINGS
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================
DEPLOYMENT_ENV=production
DEPLOYMENT_REGION=eu-west-1
DEPLOYMENT_INSTANCE_ID=${HOSTNAME}

