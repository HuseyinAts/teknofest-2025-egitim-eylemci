# Test Environment Configuration - Production Ready
# TEKNOFEST 2025 - EÄŸitim Eylemci

# Application Settings
APP_NAME=teknofest-test
APP_ENV=testing  
APP_VERSION=1.0.0
APP_DEBUG=true
ENVIRONMENT=test

# Security (Test Keys - DO NOT USE IN PRODUCTION)
SECRET_KEY=test_secret_key_for_testing_only_32chars_min
JWT_SECRET_KEY=test_jwt_secret_for_testing_only_32chars_min
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_HOST=127.0.0.1
API_PORT=8001
API_V1_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_RATE_LIMIT_PERIOD=60

# CORS Configuration (Fixed format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000","*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS","PATCH"]
CORS_ALLOW_HEADERS=["*"]

# Database Configuration
DATABASE_URL=sqlite:///./test_database.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:///./test_database.db
TEST_DATABASE_URL=sqlite:///:memory:
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=true
DATABASE_ECHO=false

# Redis Configuration 
REDIS_URL=redis://localhost:6379/1
REDIS_PREFIX=test_teknofest_
REDIS_TTL=300
REDIS_MAX_CONNECTIONS=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_PERIOD=60

# AI Model Configuration
MODEL_NAME=test-model
MODEL_DEVICE=cpu
MODEL_MAX_LENGTH=512
MODEL_PATH=./test_models
MODEL_CACHE_DIR=./test_cache
USE_GPU=false
MODEL_BATCH_SIZE=8

# Turkish NLP Settings
TURKISH_NLP_ENABLED=true
ZEMBEREK_PATH=./test_zemberek
MORPHOLOGY_CACHE_SIZE=1000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=./logs/test.log
LOG_ROTATION=1MB
LOG_RETENTION=7

# Testing Specific Settings
TESTING=true
TEST_TIMEOUT=30
TEST_PARALLEL=true
TEST_COVERAGE_MIN=80
PYTEST_WORKERS=4
MOCK_EXTERNAL_APIS=true

# Feature Flags
FEATURE_REGISTRATION_ENABLED=true
FEATURE_AI_CHAT=true
FEATURE_ANALYTICS=false
FEATURE_GAMIFICATION=true
FEATURE_IRT_ENGINE=true
FEATURE_OFFLINE_MODE=false
FEATURE_CACHE_ENABLED=true

# Performance Settings
MAX_CONNECTIONS=50
CONNECTION_TIMEOUT=10
REQUEST_TIMEOUT=30
BATCH_SIZE=20
WORKER_THREADS=4

# Cache Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=60
CACHE_KEY_PREFIX=test_

# Session Configuration
SESSION_COOKIE_NAME=test_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_LIFETIME=3600

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=["txt","pdf","json","docx","xlsx"]
UPLOAD_FOLDER=./test_uploads

# Background Jobs
CELERY_ENABLED=false
BACKGROUND_TASKS_ENABLED=false

# External Services (Mocked)
OPENAI_API_KEY=test-key
ANTHROPIC_API_KEY=test-key
HUGGINGFACE_API_KEY=test-key

# Monitoring (Disabled for Testing)
PROMETHEUS_ENABLED=false
SENTRY_ENABLED=false
OPENTELEMETRY_ENABLED=false

# Email (Disabled for Testing)
EMAIL_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=1025

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Webhook Configuration
WEBHOOK_URL=http://localhost:8000/webhook/test
WEBHOOK_TIMEOUT=5
WEBHOOK_RETRY_COUNT=3
