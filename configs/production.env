# Production Environment Configuration
ENVIRONMENT=production
DEPLOYMENT_NAME=teknofest-production
KUBE_NAMESPACE=teknofest-egitim
RELEASE_NAME=teknofest-production

# Container Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=ghcr.io/huseyinats/teknofest-2025-egitim-eylemci

# Kubernetes
KUBE_CONTEXT=production-cluster
KUBE_REGION=eu-west-1

# Resources
MIN_REPLICAS=5
MAX_REPLICAS=50
CPU_REQUEST=1000m
CPU_LIMIT=4000m
MEMORY_REQUEST=2Gi
MEMORY_LIMIT=8Gi

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERT_MANAGER_ENABLED=true
LOKI_ENABLED=true

# Features
ENABLE_AUTOSCALING=true
ENABLE_MONITORING=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
ENABLE_CIRCUIT_BREAKER=true

# Performance
MAX_WORKERS=8
CONNECTION_POOL_SIZE=100
CACHE_TTL=3600
REQUEST_TIMEOUT=30

# Security
SSL_ENABLED=true
FORCE_HTTPS=true
CORS_ENABLED=true
API_RATE_LIMIT=1000

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Notifications
SLACK_WEBHOOK=${SLACK_WEBHOOK}
PAGERDUTY_KEY=${PAGERDUTY_KEY}
EMAIL_ALERTS=ops@teknofest-egitim.example.com