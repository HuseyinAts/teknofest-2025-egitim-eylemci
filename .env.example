# ==========================================
# TEKNOFEST 2025 - ENVIRONMENT VARIABLES TEMPLATE
# ==========================================
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual values
# 3. NEVER commit .env file with real credentials to git
# 4. Use different values for development and production

# ==========================================
# ENVIRONMENT SETTINGS
# ==========================================
# Options: development, staging, production
APP_ENV=development
APP_DEBUG=true
APP_NAME=teknofest-2025-egitim-eylemci
APP_VERSION=3.0.0

# ==========================================
# SECURITY (CRITICAL - MUST CHANGE!)
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_GENERATE_RANDOM_64_CHAR_KEY
JWT_SECRET_KEY=CHANGE_THIS_GENERATE_DIFFERENT_RANDOM_KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# API SERVER
# ==========================================
API_HOST=0.0.0.0
API_PORT=8003
API_WORKERS=1  # Set to CPU count in production
API_RELOAD=true  # Set to false in production

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Development: Use * or specific localhost ports
# Production: Use actual domain names
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL Connection
DATABASE_URL=postgresql://postgres:password@localhost:5432/teknofest_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false  # Set to true for SQL debugging

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================
# Get token from: https://huggingface.co/settings/tokens
HUGGING_FACE_HUB_TOKEN=hf_YOUR_TOKEN_HERE

# Hugging Face Endpoint (Pro/Enterprise)
# Create at: https://huggingface.co/inference-endpoints
HUGGING_FACE_ENDPOINT_URL=

# Model Settings
MODEL_NAME=Huseyin/teknofest-2025-turkish-edu-v2
MODEL_DEVICE=cpu  # Options: cpu, cuda, mps
MODEL_MAX_LENGTH=2048
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_TOP_K=50

# Model Loading
MODEL_CACHE_DIR=./model_cache
MODEL_LOAD_IN_8BIT=false
MODEL_USE_CACHE=true

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=simple  # simple, json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10  # MB
LOG_BACKUP_COUNT=5

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=false  # Enable in production
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds (1 hour)
RATE_LIMIT_STRATEGY=sliding_window  # fixed_window, sliding_window, token_bucket
RATE_LIMIT_BACKEND=memory  # memory (dev) or redis (production)
RATE_LIMIT_KEY_PREFIX=teknofest:rate_limit:

# ==========================================
# MONITORING (Optional)
# ==========================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Metrics
METRICS_ENABLED=false
METRICS_PORT=9090

# ==========================================
# EMAIL (Optional)
# ==========================================
EMAIL_ENABLED=false
EMAIL_PROVIDER=smtp  # smtp, sendgrid, ses
EMAIL_FROM=noreply@example.com

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_REGISTRATION_ENABLED=true
FEATURE_AI_CHAT=true
FEATURE_ANALYTICS=true
FEATURE_MAINTENANCE_MODE=false

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-central-1
S3_BUCKET_NAME=

# Google Analytics
GA_TRACKING_ID=

# ==========================================
# CLAUDE MCP INTEGRATION
# ==========================================
MCP_ENABLED=false
MCP_SERVER_URL=http://localhost:8001
MCP_API_KEY=

# ==========================================
# DEVELOPMENT ONLY
# ==========================================
# These should be false/disabled in production
DEV_AUTO_RELOAD=true
DEV_SHOW_ERRORS=true
DEV_ALLOW_LOCALHOST=true
DEV_MOCK_EXTERNAL_APIS=false