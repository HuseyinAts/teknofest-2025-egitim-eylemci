# TEKNOFEST 2025 - Production Environment Variables
# Copy this file to .env.production and fill with actual values

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"
APP_NAME="TEKNOFEST 2025 Eğitim Platformu"
APP_VERSION=1.0.0
ALLOWED_HOSTS=api.teknofest2025.com
CORS_ORIGINS=https://teknofest2025.com,https://www.teknofest2025.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=postgres.internal
DB_PORT=5432
DB_NAME=teknofest_prod
DB_USER=teknofest_user
DB_PASSWORD=  # Strong password required
DB_SSL_MODE=require
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_ECHO=false

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=teknofest-backups

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=  # Strong password required
REDIS_DB=0
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_KEEPALIVE=true
REDIS_SOCKET_KEEPALIVE_OPTIONS={"TCP_KEEPINTVL": 30, "TCP_KEEPCNT": 3}

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour
JWT_REFRESH_TOKEN_EXPIRES=604800  # 7 days
BCRYPT_ROUNDS=12

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# 2FA Settings
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="TEKNOFEST 2025"
OTP_LENGTH=6
OTP_VALIDITY=300  # 5 minutes

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100/hour"
RATE_LIMIT_AUTH="5/minute"
RATE_LIMIT_API="1000/hour"
RATE_LIMIT_STORAGE_URI=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_ENABLED=true
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=  # SendGrid API key
FROM_EMAIL=noreply@teknofest2025.com
FROM_NAME="TEKNOFEST 2025"
EMAIL_USE_TLS=true

# Email Templates
WELCOME_EMAIL_TEMPLATE_ID=d-xxxxxxxxxxxxx
RESET_PASSWORD_TEMPLATE_ID=d-xxxxxxxxxxxxx
VERIFICATION_EMAIL_TEMPLATE_ID=d-xxxxxxxxxxxxx

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
S3_BUCKET=teknofest-prod
S3_MEDIA_BUCKET=teknofest-media
S3_BACKUP_BUCKET=teknofest-backups
S3_CDN_URL=https://cdn.teknofest2025.com
CLOUDFRONT_DISTRIBUTION_ID=

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana
GRAFANA_URL=https://grafana.teknofest2025.com
GRAFANA_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/teknofest/app.log
LOG_FILE_MAX_SIZE=100M
LOG_FILE_BACKUP_COUNT=10

# DataDog (optional)
DATADOG_ENABLED=false
DATADOG_API_KEY=
DATADOG_APP_KEY=

# ============================================
# AI/ML SERVICES
# ============================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google AI
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-pro

# Hugging Face
HUGGINGFACE_API_KEY=
HUGGINGFACE_MODEL=meta-llama/Llama-2-7b

# ============================================
# CELERY CONFIGURATION
# ============================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/2
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/3
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Europe/Istanbul
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# ============================================
# CACHE CONFIGURATION
# ============================================
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/4
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=teknofest_

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================
WEBSOCKET_ENABLED=true
WEBSOCKET_URL=wss://ws.teknofest2025.com
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=5

# ============================================
# PAYMENT GATEWAY (if needed)
# ============================================
STRIPE_ENABLED=false
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_GAMIFICATION=true
FEATURE_AI_QUIZ=true
FEATURE_REALTIME_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_LEARNING=true
FEATURE_OFFLINE_MODE=true

# ============================================
# PERFORMANCE SETTINGS
# ============================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# ============================================
# SECURITY HEADERS
# ============================================
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
X_FRAME_OPTIONS=DENY

# ============================================
# EXTERNAL SERVICES
# ============================================
# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# CDN
CDN_ENABLED=true
CDN_URL=https://cdn.teknofest2025.com

# Search
ELASTICSEARCH_URL=
ELASTICSEARCH_INDEX=teknofest

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
DEPLOYMENT_ID=
DEPLOYMENT_REGION=eu-west-1
DEPLOYMENT_ENV=production
AUTO_SCALE_ENABLED=true
MIN_REPLICAS=3
MAX_REPLICAS=10

# ============================================
# SLACK NOTIFICATIONS
# ============================================
SLACK_ENABLED=true
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#teknofest-alerts
SLACK_USERNAME=TEKNOFEST Bot

# ============================================
# MAINTENANCE MODE
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Sistem bakımda. Lütfen daha sonra tekrar deneyin."
MAINTENANCE_ALLOWED_IPS=

# ============================================
# DEBUG (Production should be false)
# ============================================
SQL_DEBUG=false
REDIS_DEBUG=false
REQUEST_DEBUG=false
PROFILING_ENABLED=false
